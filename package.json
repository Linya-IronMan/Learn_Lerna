{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "git cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^7.0.0",
    "husky": "^8.0.3",
    "lerna": "^4.0.0",
    "typescript": "^5.3.3",
    "yorkie": "^2.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "husky": {
      "hooks": {
        "commit-msg": "commitlint -e -V"
      }
    }
  }
}